{
  "name": "angular2-tour-of-heroes",
  "version": "0.1.0",
  "scripts": {
    "start": "gulp copy-jit && concurrently \"npm run tsc:watch\" \"npm run sass:watch\"  \"npm run lite\" ",
    "lite": "lite-server",
    "tsc": "tsc",
    "tsc:watch": "tsc --watch",
    "build:sass": "node-sass -o styles/compiled/ styles/",
    "sass:watch": "npm run build:sass && node-sass -o styles/compiled/ -w styles/main.scss",
    "serve-css": "gulp serve-css",
    "aot": "ngc -p tsconfig-aot.json",
    "rollup": "rollup -c rollup-config.js",
    "start-aot": "npm run aot && npm run rollup && gulp copy-aot && npm run lite"
  },
  "dependencies": {
    "@angular/common": "~2.2.0",
    "@angular/compiler": "~2.2.0",
    "@angular/compiler-cli": "~2.2.0",
    "@angular/core": "~2.2.0",
    "@angular/forms": "~2.2.0",
    "@angular/http": "~2.2.0",
    "@angular/platform-browser": "~2.2.0",
    "@angular/platform-browser-dynamic": "~2.2.0",
    "@angular/platform-server": "~2.2.0",
    "@angular/router": "~3.2.0",
    "@angular/upgrade": "~2.2.0",
    "angular-in-memory-web-api": "~0.1.15",
    "angular2-mdl": "^2.7.0",
    "core-js": "^2.4.1",
    "ng2-bs3-modal": "^0.10.4",
    "normalize-scss": "^6.0.0",
    "reflect-metadata": "^0.1.8",
    "rxjs": "5.0.0-beta.12",
    "systemjs": "0.19.40",
    "zone.js": "^0.6.26"
  },
  "devDependencies": {
    "@types/core-js": "^0.9.34",
    "@types/jasmine": "^2.5.36",
    "@types/node": "^6.0.46",
    "@types/selenium-webdriver": "^2.53.33",
    "autoprefixer": "^6.3.1",
    "bootstrap": "^3.3.7",
    "browser-sync": "^2.18.2",
    "concurrently": "^3.1.0",
    "del": "^2.2.2",
    "gulp": "^3.9.1",
    "gulp-gzip": "^1.4.0",
    "gulp-load-plugins": "^1.3.0",
    "gulp-rename": "^1.2.2",
    "gulp-sass": "^2.3.2",
    "gulp-svg-sprite": "^1.3.6",
    "gulp-task-listing": "^1.0.1",
    "gulp-util": "^3.0.7",
    "jquery": "^3.1.1",
    "lite-server": "^2.2.2",
    "node-sass": "^3.13.0",
    "postcss": "^5.0.14",
    "raw-loader": "^0.5.1",
    "rollup": "^0.36.1",
    "rollup-plugin-commonjs": "^5.0.4",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-uglify": "^1.0.1",
    "sass-loader": "^4.0.2",
    "typescript": "^2.0.3"
  }
}
